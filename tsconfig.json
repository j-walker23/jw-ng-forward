{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": false,
    "stripInternal": true,
    "target": "es5",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "outDir": "dist/",
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "**/*.spec.ts",
    "webpack.config.ts",
    "lib/tests/*",
    "node_modules"
  ]
}

